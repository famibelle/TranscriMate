[Unit]
Description=NPM Frontend Service
After=network.target

[Service]
WorkingDirectory=/home/azureuser/SourceCode/Transcription/frontend
ExecStart=/usr/bin/env npm run serve -- --host 0.0.0.0 --port 8080 --disable-host-check
Restart=always
RestartSec=15
Environment="PATH=/usr/local/bin:/usr/bin:/home/azureuser/SourceCode/Transcription/.venv/bin"
EnvironmentFile=/home/azureuser/SourceCode/Transcription/frontend/.env.local

[Install]
WantedBy=default.target
